{
    "name": "rexatgithub/istoy",
    "description": "Istoy - A Laravel package for managing social media service providers (SMM) with extensible provider architecture",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "social-media",
        "smm",
        "provider",
        "service"
    ],
    "require": {
        "php": "^8.0.2",
        "guzzlehttp/guzzle": "^7.2",
        "illuminate/support": "^9.0|^10.0|^11.0",
        "illuminate/database": "^9.0|^10.0|^11.0",
        "illuminate/http": "^9.0|^10.0|^11.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0|^8.0|^9.0",
        "phpunit/phpunit": "^9.5|^10.0",
        "mockery/mockery": "^1.5"
    },
    "scripts": {
        "test": [
            "@php -r \"if (!file_exists('vendor/bin/phpunit')) { echo PHP_EOL . '❌ Dependencies not installed.' . PHP_EOL . PHP_EOL . 'Please run: composer install' . PHP_EOL . PHP_EOL; exit(1); }\"",
            "vendor/bin/phpunit"
        ],
        "test-coverage": [
            "@php -r \"if (!file_exists('vendor/bin/phpunit')) { echo PHP_EOL . '❌ Dependencies not installed.' . PHP_EOL . PHP_EOL . 'Please run: composer install' . PHP_EOL . PHP_EOL; exit(1); }\"",
            "vendor/bin/phpunit --coverage-html coverage"
        ]
    },
    "autoload": {
        "psr-4": {
            "Istoy\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Istoy\\Tests\\": "tests/"
        }
    },
    "homepage": "https://github.com/rexatgithub/istoy",
    "support": {
        "source": "https://github.com/rexatgithub/istoy",
        "issues": "https://github.com/rexatgithub/istoy/issues"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Istoy\\IstoyServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [{
        "name": "packagist",
        "type": "composer",
        "url": "https://packagist.jp"
    }]
}
